<Window x:Class="Warehouse.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Customer" Height="200" Width="300">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="First Name:"/>
            <TextBox x:Name="txtFirstName" Margin="0,0,0,10"/>

            <TextBlock Text="Last Name:"/>
            <TextBox x:Name="txtLastName" Margin="0,0,0,10"/>


            <Button Content="Add Customer" Width="100" Click="AddCustomer_Click"/>
        </StackPanel>
    </Grid>
</Window>

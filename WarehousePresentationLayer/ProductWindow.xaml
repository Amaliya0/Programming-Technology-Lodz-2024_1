<Window x:Class="Warehouse.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Product" Height="200" Width="300">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Product Name:"/>
            <TextBox x:Name="txtProductName" Margin="0,0,0,10"/>

            <TextBlock Text="Quantity:"/>
            <TextBox x:Name="txtQuantity" Margin="0,0,0,10"/>

            <Button Content="Add Product" Width="100" Click="AddProduct_Click"/>
        </StackPanel>
    </Grid>
</Window>

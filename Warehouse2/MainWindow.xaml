<Window x:Class="Warehouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Warehouse Management System" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button x:Name="FulfillOrderButton" Content="Fulfill Order" Click="FulfillOrderButton_Click"/>
            <Button x:Name="TakeInSuppliesButton" Content="Take In Supplies" Click="TakeInSuppliesButton_Click"/>
        </StackPanel>

        <ListBox Grid.Row="1" x:Name="UserListBox" Margin="10"/>
    </Grid>
</Window>

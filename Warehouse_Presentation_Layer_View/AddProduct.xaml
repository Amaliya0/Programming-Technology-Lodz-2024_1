<Window x:Class="WarehousePresentationLayer.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Product" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Product Name:" Margin="5"/>
            <TextBox Name="ProductNameTextBox" Margin="5"/>
            <TextBlock Text="Initial Quantity:" Margin="5"/>
            <TextBox Name="InitialQuantityTextBox" Margin="5"/>
            <Button Content="Add" Click="AddButton_Click" Width="100" Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
